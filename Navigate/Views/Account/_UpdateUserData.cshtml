@model Navigate.Models.UserDataModel

@using (Html.BeginForm("Update", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="well">
        <fieldset>
            <legend>Lietotāja datu rediģēšanas forma</legend>
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email, new { @class = "span3" })
                @Html.ValidationMessageFor(m => m.Email)

                @Html.LabelFor(m => m.BaseLocation)
                @Html.EditorFor(m => m.BaseLocation, new { @class = "span3" })
                @Html.ValidationMessageFor(m => m.BaseLocation)
            <br />
            <div class="alert alert-info">
                <strong>
                    Mainot e-pasta adresi vai pamata atrašanās vietu,  visi līdz šim ieplānotie atgādinājumi tiks sūtīti uz veco e-pasta adresi
                    un attāums tiks rēķināts no vecās atrašanās vietas, ja vēlaties, lai veco uzdevumu atgādinājumi tiktu sūtīti uz jauno e-pasta adresi,
                    saglabājiet šos uzdevumus pa jaunu.
                </strong>
            </div>
            <input type="submit" value="Saglabāt" class="btn btn-primary" />          
        </fieldset>
    </div>
}