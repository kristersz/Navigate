@model Navigate.Models.LoginModel

@{
    ViewBag.Title = "Pieteikties";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="well">
        <fieldset>
            <legend>Pieteikšanās forma</legend>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "span3" })
            @Html.ValidationMessageFor(m => m.UserName)

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "span3" })
            @Html.ValidationMessageFor(m => m.Password)
            <label for="RememberMe">
                @Html.CheckBoxFor(m => m.RememberMe) Atcerēties mani
            </label>

            <input type="submit" value="Pieteikties" class="btn btn-primary" />
        </fieldset>
    </div>
    <p>
        @Html.ActionLink("Reģistrēties", "Register"), ja Jums nav sava lietotāja konta.
    </p>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
