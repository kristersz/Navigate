@{
    var origin = "Elizabetes 75, Rīga, Latvia";
    var destination = (string)ViewBag.Location;
    ViewBag.Title = "Navigation";
}

@section Scripts {
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDRB5Lq6cJATlN4-BDhE0-laoR1mfYx-Ys&sensor=false">
    </script>   
    @Scripts.Render("~/bundles/google-apis")
}

<h2>Navigate to @destination</h2>

<table>
    <tr>
        <td>
            <strong>Origin: </strong>
        </td>
        <td>
            <strong>Destination: </strong>
        </td>
    </tr>
    <tr>
        <td>
            @Html.TextBox("origin", @origin, new { @id = "start" })
        </td>
        <td>
            @Html.TextBox("destination", @destination, new { @id = "end" })
        </td>
    </tr>
</table>
<form>
    I will
    <input type="radio" name="travelMode" value="DRIVING" checked="checked" style="width: 20px">drive
    <input type="radio" name="travelMode" value="WALKING" style="width: 20px">walk
    <input type="radio" name="travelMode" value="TRANSIT" style="width: 20px">use public transportation
</form>
<button onclick="calcRoute(); calcDistance()">Navigate</button>

<div id="warnings_panel" style="width:100%; height:10%; text-align:center"></div>
<div id="distanceOutput"></div>
<div id="directions_panel" style="width: 300px; height: 480px; float:right; overflow: auto"></div>
<div id="map-canvas" style="width: 640px; height: 480px;" />
