@model IEnumerable<Navigate.ViewModels.WorkItemListViewModel>


<div id="workItemList">
    @foreach (var item in Model)
    {
        var completed = 0;
        if (item.isCompleted)
        {
            completed = 1;
        }
        <div id="workItem@(item.Id.ToString())" class="@if (completed == 1) {<text>taskDone</text> }workItems">
            <div>
                @Html.DisplayNameFor(model => model.Subject) :
                @Html.DisplayFor(model => item.Subject)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Location) :
                @Html.DisplayFor(model => item.Location)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.StartDateTime) :
                @Html.DisplayFor(model => item.StartDateTime)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.EndDateTime) :
                @Html.DisplayFor(model => item.EndDateTime)
            </div>
            @if (item.Location != null)
            {
                @Html.ActionLink("Navigate", "Navigate", new { id = item.Id })
            }
            <button id="changeStatus@(item.Id.ToString())" class="btn" onclick="changeStatus(@item.Id.ToString())">@if (completed == 0) {<text>Atzīmēt kā pabeigtu</text>} else {<text>Atzīmēt kā nepabeigtu</text>}</button>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            <hr />
        </div>
    }
</div>