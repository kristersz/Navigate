@model IEnumerable<Navigate.ViewModels.WorkItemListViewModel>

<div id="workItemList">
    @foreach (var item in Model)
    {
        <div id="workItems">
            <div>
                @Html.DisplayNameFor(model => model.Subject) :
                @Html.DisplayFor(model => item.Subject)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.Location) :
                @Html.DisplayFor(model => item.Location)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.StartDateTime) :
                @Html.DisplayFor(model => item.StartDateTime)
            </div>
            <div>
                @Html.DisplayNameFor(model => model.EndDateTime) :
                @Html.DisplayFor(model => item.EndDateTime)
            </div>
            @if (item.Location != null)
            {
                @Html.ActionLink("Navigate", "Navigate", new { id = item.Id })
            }
            @if (item.isCompleted == false)
            {
              @Html.ActionLink("Mark as completed", "Complete", new { @id = item.Id })
            }
            else
            {
              @Html.ActionLink("Mark as incomplete", "Complete", new { @id = item.Id })
            }
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            <hr />
        </div>
    }
</div>