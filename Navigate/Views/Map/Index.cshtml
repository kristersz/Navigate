@{
    ViewBag.Title = "Index";
    var origin = "Artilērijas 3, Rīga, Latvia";
    var destination = "Elizabetes 75, Rīga, Latvia";
}

@section Scripts {
    <script type="text/javascript"
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDRB5Lq6cJATlN4-BDhE0-laoR1mfYx-Ys&sensor=false">
    </script>   
    @Scripts.Render("~/bundles/google-maps")
}

<h2>Google Maps!</h2>

<div>
    <strong>Start: </strong>
    @Html.TextBox("origin", @origin, new { @id = "start" })
</div>
<div>
    <strong>End: </strong>
    @Html.TextBox("destination", @destination, new { @id = "end" })
<button onclick="calcRoute(); calcDistance()">Iegūt norādes</button>
</div>
<div id="distanceOutput"></div>
<div id="directions_panel" style="width: 300px; height: 480px; float:right"></div>
<div id="map-canvas" style="width: 640px; height: 480px;" />
<div id="warnings_panel" style="width:100%; height:10%; text-align:center"></div>

