@model IEnumerable<Navigate.Models.RecurringItem>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OriginalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkItem.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IndividualLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IndividualBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkItem.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IndividualLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IndividualBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdatedAt)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "RecurringItem", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", "RecurringItem", null, new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", "RecurringItem", null, new { id=item.Id })
        </td>
    </tr>
}

</table>


